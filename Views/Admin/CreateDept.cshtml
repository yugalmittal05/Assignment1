@model Department

<form enctype="multipart/form-data" asp-controller="admin" asp-action="CreateDept" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="DepartmentName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DepartmentName" class="form-control" placeholder="Name">
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>
