@model Assignment1.ViewModels.EmployeeDetailsViewModel
@{ 
    ViewBag.Title = "Employee Details";
}
@{
    <div class="row justify-content-center m-3">
      <div class="col-sm-8">
          <div class="card">
              <div class="card-header">
                  <h1>Employee Id : @Model.Id</h1>
              </div>

              <div class="card-body text-center">
                  <h4>Employee Name : @Model.Name</h4>
                  <h4>Employee City : @Model.City</h4>
                  <h4>Gender : @Model.Gender</h4>
                  <h4>Department : @Model.DepartmentName</h4>
              </div>
              <div class="text-center">
                  <a asp-action="details" asp-route-deptId="@ViewBag.deptId" class="btn btn-primary col-3">Go To Employee List</a>
                  <a asp-action="edit" asp-controller="admin" asp-route-deptId="@ViewBag.deptId" 
                     asp-route-empid="@Model.Id" class="btn btn-info col-3">Edit</a>
                  <a asp-action="delete" asp-controller="admin" asp-route-deptId="@ViewBag.deptId" 
                     asp-route-empid="@Model.Id" class="btn btn-danger col-3">delete</a>
              </div>
              <br />
              <br />
          </div>
        </div>
  
      </div>
  }


